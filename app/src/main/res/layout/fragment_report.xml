<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar_report">

        <TextView
            android:id="@+id/report_cctv_image_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17.5sp"
            android:textColor="@android:color/black"
            android:text="@string/cctv_image_string" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/default_string" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">


            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cctv_image"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="#eee"
                    android:contentDescription="@string/default_string" />

                <ImageView
                    android:id="@+id/cctv_image_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/cctv"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/default_string" />

                <TextView
                    android:id="@+id/cctv_image_text_view"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cctv_photo_picker_string"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/report_info_image_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textSize="17.5sp"
            android:textColor="@android:color/black"
            android:text="@string/cctv_info_string" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/default_string" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/info_image"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="#eee"
                    android:contentDescription="@string/default_string" />

                <ImageView
                    android:id="@+id/cctv_info_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/info"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/default_string" />

                <TextView
                    android:id="@+id/cctv_info_text_view"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_photo_picker_string"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/info_image_null"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="#eee"
                    android:contentDescription="@string/default_string" />

                <ImageView
                    android:id="@+id/info_image_null_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/checked"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:contentDescription="@string/default_string" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_null_string"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <include
        layout="@layout/bottom_bar_report"
        android:id="@+id/bottom_bar_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true" />

</RelativeLayout>