<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp" android:layout_gravity="bottom">

    <TextView
        android:id="@+id/now_getting_current_location"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFFFF"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/now_getting_current_location" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF">

        <TextView
            android:id="@+id/ask_report_current_location"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/ask_report_current_location" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/report_continue_btn"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/report_btn_y" />

            <Button
                android:id="@+id/report_abort_btn"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/report_btn_n" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>