<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agreement_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agreement_string" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/dialog_agree_btn"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="@string/agreement_btn_y" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/dialog_disagree_btn"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="@string/agreement_btn_n" />

    </LinearLayout>

</LinearLayout>